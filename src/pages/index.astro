---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Frontend Mentor | Interactive card details form">
	<main>
		<div class="card-wrapper">
			<div class="card-group">
				<div class="card card-front">
					<img src="/card-logo.svg" alt="" class="card-logo">

					<div class="card-number">
						0000 0000 0000 0000
					</div>

					<div class="card-name">Jane Appleseed</div>

					<div class="card-date">00/00</div>
				</div>

				<div class="card card-back">
					<div>000</div>
				</div>
			</div>
		</div>

		<div class="form-wrapper">
			<form action="" class="form">
				<div class="form-group">
					<label for="name" class="form-label">Cardholder Name</label>
					<input type="text" placeholder="e.g. Jane Appleseed" class="form-control">
				</div>

				<div class="form-group">
					<label for="number" class="form-label">Card Number</label>
					<input type="text" placeholder="e.g. 1234 5678 9123 0000" class="form-control">
				</div>

				<div class="form-date-cvc">
					<div class="form-group">
						<label for="date" class="form-label">Exp. Date (MM/YY)</label>
						
						<div class="form-date-group">
							<div>
								<input type="text" placeholder="MM" class="form-control">
							</div>

							<div>
								<input type="text" placeholder="YY" class="form-control">
							</div>
						</div>
					</div>

					<div class="form-group">
						<label for="cvc" class="form-label">CVC</label>
						<input type="text" placeholder="e.g. 123" class="form-control">
					</div>
				</div>

				<button class="btn">Confirm</button>
			</form>
		</div>

		<div class="hidden">
			Thank you!
			We've added your card details
			Continue
		</div>

		<div class="attribution hidden">
		Challenge by <a href="https://www.frontendmentor.io?ref=challenge" target="_blank">Frontend Mentor</a>. 
		Coded by <a href="#">Byron</a>.
		</div>
	</main>
</Layout>

